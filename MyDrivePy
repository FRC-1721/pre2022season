import wpilib
import wpilib.drive
import rev

#id 1 = drive
#id 2 = spin

class UnnamedToaster(wpilib.TimedRobot):
    def robotInit(self):
        # Initialize port side drive train
        # Port wheel
        self.portMotorVroom = rev.CANSparkMax(1, rev.MotorType.kBrushless)
        self.portMotorSpin = rev.CANSparkMax(2, rev.MotorType.kBrushless)

        self.driveTrain = wpilib.drive.DifferentialDrive(self.portMotorLeader, self.starboardMotorOne)

        self.joy = wpilib.Joystick(0)

    # Initalizes joystick to control the drivetrain
    def teleopPeriodic(self):
        self.portMotorVroom.set(self.joy.getRawAxis(1))
        self.portMotorSpin(-self.joy.getRawAxis(2))


if __name__ == "__main__":
    wpilib.run(UnnamedToaster)


    
